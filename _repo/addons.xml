<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.resmax" name="ResMax repository" version="2021.07.07.0" provider-name="ResMax">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="ResMax repository">
            <info compressed="false">https://github.com/resmax/repository.resmax/tree/master/_repo/addons.xml</info>
            <checksum>https://github.com/resmax/repository.resmax/tree/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/resmax/repository.resmax/tree/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>ResMax repository.</summary>
            <description>Kodi addons developed by ResMax.</description>
            <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.video.resmax.livetv" name="LiveTV" version="2020.05.02.0" provider-name="Resmax">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="plugin.video.youtube" version="1.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">TV Channels</summary>
    <description lang="en">Al-Jazeera, CBSN, EuroNews, NHK, SkyNews etc.</description>
    <disclaimer lang="en">Watch Live TV Channels from open sources avalable on the Internet. The author of this addon take no responsibility for and will not be liable for the contents of these channels or the use of this addon.</disclaimer>
	<assets>
		<icon>icon.png</icon>
		<fanart>fantart.jpg</fanart>
	</assets>
	<news>Updated with Youtube channels</news>
    <source></source>
    <forum></forum>
  </extension>
</addon>
</addons>
